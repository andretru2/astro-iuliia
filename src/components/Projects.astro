---

<section class="bg-white relative">
  <SectionTitle title="WORK" class="pt-[40rem]" />
  <div class="flex flex-col gap-72 pt-[15rem]">
    {
      PROJECTS.map((project, i) => (
        <div>
          <ProjectCard key={i} project={project} reverse={i % 2 === 0} />
        </div>
      ))
    }
  </div>
</section>


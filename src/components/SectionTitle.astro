---
interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props as Props;
---

<h1
  class:list={[
    "flex items-center justify-center text-[350px] text-gray-100 leading-[100px]  drop-shadow-md font-extrabold   tracking-wider transition -translate-y-8  ease-out duration-300  ",
    className,
  ]}
>
  {title}
</h1>

---
import CopyToClipboard from "@components/CopyToClipboard.astro";
import { Icon } from "astro-icon";
import site from "@data/site";

export interface Props {
  href?: string;
  copyToClipboard?: boolean;
  primary?: boolean;
  class?: string;
}

const {
  href,
  copyToClipboard = false,
  primary = true,
  class: className,
} = Astro.props as Props;
---

{copyToClipboard && <CopyToClipboard />}

<a
  href=`mailto:${site.email}?Subject=Let%27s talk about`
  class:list={[
    `ripple px-12 py-4 text-white bg-designsystem text-lg sm:text-xl font-regular sm:font-semibold cursor-pointer`,
    className,
  ]}
  ><slot />
</a>

<style>
  .ripple {
    background-position: center;
    transition: background 0.8s;
  }
  .ripple:hover {
    background: #000b95 radial-gradient(circle, transparent 1%, #000b95 1%)
      center/15000%;
  }
  .ripple:active {
    background-color: #000b95;
    background-size: 100%;
    transition: background 0s;
  }


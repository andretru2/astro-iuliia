<style>
  .diagonal {
    --skew-angle: -2deg;
    --background: linear-gradient(45deg, #3368ff, #3368ff, #3368ff);
    /* --background: "#3368FF"; */

    position: relative;
    isolation: isolate;
  }

  .diagonal::after {
    content: "";
    background: var(--background);
    position: absolute;
    z-index: -1;
    inset: 0;
    transform: skewY(var(--skew-angle));
  }
</style>

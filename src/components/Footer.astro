---
import site from "@src/data/site.js";
import { Sprite } from "astro-icon";
import Logo from "@components/Logo.astro";
---

<footer
  class="bg-black p-36 relative overflow-hidden border-t-4 border-black shadow-md"
>
  <div class="flex flex-col items-center align-center">
    <h1 class="text-6xl text-white font-semibold">Work with me!</h1>
    <a
      href=`mailto:${site.email}?Subject=Let%27s talk about`
      class="mt-12 px-8 py-3 font-bold rounded-md text-slate-800 bg-slate-50 hover:bg-slate-200"
      >Get in Touch</a
    >
  </div>

  <div
    class="max-w-7xl mx-auto flex flex-col gap-4 border-t-[0.5px] mt-24 text-neutral-300"
  >
    <h1 class="text-3xl font-semibold pt-24">{site.name}</h1>
    <a
      href=`mailto:${site.email}?Subject=Let%27s talk about`
      class="text-lg font-regular">{site.email}</a
    >

    <div class="flex justify-start gap-4 pt-2">
      {
        site.socialLinks.map(({ href, text, pack, name }) => (
          <a
            href={href}
            title={text}
            class="text-neutral-300 hover:text-neutral-100 "
          >
            <span class="sr-only">{text}</span>
            <Sprite pack={pack} name={name} size={24} aria-hidden="true" />
          </a>
        ))
      }
    </div>
  </div>

  <svg
    class="absolute left-[-700px] top-[600px] z-[10] blur-[225px] safari-blur h-[300px] w-[300px]"
    viewBox="0 0 200 200"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      fill="#f2f2f2"
      d="M44,-17.1C51.5,8.6,48.1,35.1,34,44.9C19.9,54.6,-4.8,47.7,-25.5,33.1C-46.3,18.6,-62.9,-3.6,-57.9,-25.9C-53,-48.2,-26.5,-70.5,-4.1,-69.2C18.3,-67.8,36.6,-42.8,44,-17.1Z"
      transform="translate(100 100)"></path>
  </svg>
</footer>

<style>
  .safari-blur {
    transform: translate3d(0, 0, 0);
  }
</style>

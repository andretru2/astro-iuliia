---
import { Sprite } from "astro-icon";
import BaseHead, { Props as BaseHeadProps } from "@components/BaseHead.astro";
import Header from "@components/Header.astro";

// import Footer from "@components/Footer.astro";

export interface Props extends BaseHeadProps {
  hero?: boolean;
  class?: string;
}

const { hero = false, class: className = "", ...head } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead {...head} />
  </head>

  <body>
    <Sprite.Provider>
      <div class="flex min-h-screen flex-col overflow-x-hidden sm:px-0">
        <Header hero={hero} />

        <main class:list={["flex-1", className]}>
          <slot />
        </main>

        <!-- <Footer /> -->
      </div>
    </Sprite.Provider>
  </body>
</html>
